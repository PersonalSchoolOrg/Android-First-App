<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HelloWorld"
    android:background="@color/material_blue_grey_900">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Freaking "
        android:id="@+id/textView"
        android:layout_marginTop="96dp"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textStyle="italic"
        android:textColor="@color/background_floating_material_light"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/playBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:text="Math"
        android:textColor="@color/background_floating_material_light"
        android:id="@+id/textView2"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/playBtn"
        android:layout_marginStart="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textStyle="italic"
        android:singleLine="false"
        android:id="@+id/playBtn"
        android:layout_marginTop="108dp"
        android:background="@color/material_blue_grey_900"
        android:textColor="@color/background_floating_material_light"
        android:textSize="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>