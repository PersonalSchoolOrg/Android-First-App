<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HelloWorld"
    android:background="@color/highlighted_text_material_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/answerYes"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/answerNo"
        android:layout_alignStart="@+id/scoreTv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:id="@+id/answerNo"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/answerYes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/equationTv"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:text="asfs"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/againBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/resultText"
        android:layout_marginBottom="90dp"
        android:layout_above="@+id/answerYes"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scores: 0"
        android:id="@+id/scoreTv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Again ?"
        android:id="@+id/againBtn"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/resultText"
        android:layout_alignStart="@+id/answerYes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerValue"
        android:layout_above="@+id/answerYes"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

</RelativeLayout>
